<script>
function updateFields() {
    const cat = document.getElementById('category').value;
    const dynamicFields = document.getElementById('dynamicFields');
    
    if(cat === '') {
        dynamicFields.style.display = 'none';
        return;
    }

    dynamicFields.style.display = 'block';
    dynamicFields.innerHTML = ''; // تفريغ الحقول

    if(cat === 'cars') {
        dynamicFields.innerHTML = `
            <label>سنة الصنع</label>
            <input type="number" placeholder="مثلاً: 2020" required>
            <label>نوع الوقود</label>
            <input type="text" placeholder="بنزين، مازوت..." required>
        `;
    } else if(cat === 'realestate') {
        dynamicFields.innerHTML = `
            <label>المساحة (م²)</label>
            <input type="number" placeholder="مثلاً: 120" required>
            <label>عدد الغرف</label>
            <input type="number" placeholder="مثلاً: 3" required>
        `;
    } else {
        // إخفاء القسم إذا لم يكن سيارات أو عقارات
        dynamicFields.style.display = 'none';
    }
}
</script>

